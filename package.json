{
  "name": "@blotoutio/sdk-js",
  "version": "0.3.0",
  "description": "Blotout JS SDK",
  "author": "Blotout",
  "license": "MPL-2.0",
  "homepage": "https://github.com/blotoutio/sdk-js",
  "repository": {
    "type": "git",
    "url": "git://github.com/blotoutio/sdk-js.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "src/index.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "build:dev": "webpack --config webpack.dev.js",
    "publish": "webpack --config webpack.publish.js",
    "demo": "webpack --config webpack.demo.js",
    "start": "webpack serve --config webpack.dev.js",
    "lint": "standard",
    "test": "npm-run-all test:*",
    "test:unit": "jest --runInBand",
    "test:integration": "start-server-and-test start http://localhost:8080 'cypress run'"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "@blotoutio/jsencrypt-no-random-padding": "^2.3.4",
    "crypto-js": "^3.1.9-1",
    "ua-parser-js": "^0.7.23",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "babel-jest": "^26.3.0",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "^6.1.1",
    "cypress": "^6.2.0",
    "jest": "^26.4.2",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "standard": "^16.0.0",
    "start-server-and-test": "^1.11.7",
    "webpack": "^5.0.0",
    "webpack-bundle-analyzer": "^4.2.0",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.2.0"
  },
  "standard": {
    "ignore": [
      "/src/3rdParty/*",
      "/dist",
      "/demo",
      "/src/demo",
      "jest.config.js"
    ],
    "globals": [
      "fetch",
      "XMLHttpRequest",
      "describe",
      "it",
      "expect",
      "diff",
      "beforeEach",
      "afterEach",
      "beforeAll",
      "afterAll",
      "jest",
      "context",
      "cy",
      "Cypress",
      "assert"
    ]
  }
}
